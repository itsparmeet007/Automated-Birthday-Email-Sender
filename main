#Automated Birthday Email Sender
import datetime as dt
import smtplib
import random
import pandas as pd

today = dt.datetime.now()
today_tuple = (today.month,today.day)
MY_EMAIL = 'ps.4321007@gmail.com'
PASSWORD = 'mxxo lubu nuup pzze'

data = pd.read_csv("birthdays.csv")
birthday_dict = {(data_rows["month"],data_rows["day"]): data_rows for (index,data_rows) in data.iterrows()}
if today_tuple in birthday_dict:
    birthday_person = birthday_dict[today_tuple]
    file_path = f"Letters_templates/letter_{random.randint(1,3)}.txt"
    with open(file_path) as letter_file:
        contents = letter_file.read()
        contents = contents.replace("[NAME]",birthday_person['name'])

    with smtplib.SMTP("smtp.gmail.com") as connection:
        connection.starttls()
        connection.login(MY_EMAIL, PASSWORD)
        connection.sendmail(from_addr =MY_EMAIL,
                            to_addrs =birthday_person['email'],
                            msg = f"Subject:Happy Birthday!\n\n{contents}"
                            )
        print("Email sent Successfully!!")
